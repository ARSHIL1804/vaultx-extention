{
  "manifest_version": 3,
  "name": "VaultX",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Vault X"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"]
  }],
  "web_accessible_resources": [{
    "resources": ["provider.js"],
    "matches": ["<all_urls>"]
  }],
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable":{
    "matches": [
      "http://localhost:3000/*"
    ]
  }
}